{
  "name": "react-typescript-email",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Jimmy HedstrÃ¶m",
  "description": "Create and serve email templates on the fly with Node Express and React.",
  "private": true,
  "scripts": {
    "start": "rm -rf build && concurrently -k -n \"razzle,Sass\" -c \"yellow.bold,cyan.bold\" \"razzle start\" \"npm run css:watch\"",
    "build": "razzle build && npm run css:build",
    "test": "razzle test --env=jsdom",
    "start:prod": "NODE_ENV=production node build/server.js",
    "css:build": "node-sass src/emails/styles/scss/main.scss src/emails/styles/main.css && cp src/emails/styles/main.css build",
    "css:watch": "nodemon -e scss -x \"node-sass src/emails/styles/scss/main.scss src/emails/styles/main.css\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "ie 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "last 1 iOS version",
      "ie 11"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "core-js": "^3.6.4",
    "date-fns": "^2.8.1",
    "express": "^4.17.1",
    "isomorphic-fetch": "^2.2.1",
    "juice": "^6.0.0",
    "mailgun-js": "^0.22.0",
    "normalize.css": "^8.0.1",
    "react": "^16.8.6",
    "react-app-polyfill": "^1.0.3",
    "react-dom": "^16.8.6",
    "react-helmet-async": "^1.0.4",
    "react-router-dom": "^5.0.1",
    "svg-react-loader": "^0.4.6",
    "ts-polyfill": "^3.8.2"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/core-js": "^2.5.3",
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/express": "^4.17.0",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "^23.3.14",
    "@types/mailgun-js": "^0.22.4",
    "@types/node": "^12.6.6",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-helmet": "^5.0.14",
    "@types/react-router-dom": "^4.3.4",
    "@types/webpack-env": "^1.15.1",
    "concurrently": "^5.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "jest-css-modules-transform": "^2.1.1",
    "node-sass": "^7.0.0",
    "nodemon": "^2.0.3",
    "razzle": "^3.0.0",
    "razzle-plugin-typescript": "^3.0.0",
    "sass-loader": "^7.1.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      ".+\\.(css|styl|less|sass|scss)$": "<rootDir>/node_modules/jest-css-modules-transform",
      "^(?!.*\\.(js|jsx|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "setupFiles": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
